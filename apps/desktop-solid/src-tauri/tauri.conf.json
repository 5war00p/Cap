{
  "productName": "desktop-solid",
  "version": "0.1.0",
  "identifier": "so.cap.desktop-solid",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../.output/public"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Cap",
        "width": 300,
        "height": 325,
        "decorations": false,
        "resizable": false,
        "maximized": false,
        "shadow": true,
        "transparent": true,
        "acceptFirstMouse": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
